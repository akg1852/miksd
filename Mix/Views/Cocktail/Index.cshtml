@using Mix.Models;
@using Mix.Services;

@{
    Cocktail cocktail = ViewBag.Cocktail;
    ViewBag.Title = cocktail.Name;
}

<h2>@cocktail.Name</h2>

@ImageService.CocktailImage(cocktail, 200, "cocktail-image")

<h3>Recipe</h3>
<ul>
    @foreach (var ingredient in cocktail.Recipe)
    {
        <li>
            @ingredient.QuantityHtml() @ingredient.Name
            @if (ingredient.IsOptional)
            {
                <span>(optional)</span>
            }
        </li>
    }
</ul>

<p>@cocktail.Description()</p>

<h3>Similar Cocktails</h3>
<ul>
    @foreach (var similarCocktail in cocktail.Similar)
    {
        <li>
            <a class="link" href="/Cocktail/@((long)similarCocktail.Id)">@similarCocktail.Name</a>
        </li>
    }
</ul>